<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.mindyourlovedones.healthcare.HomeActivity.SponsorActivity">

    <RelativeLayout
        android:id="@+id/rlSponsor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3282E1"
        android:gravity="center_vertical"
        android:padding="@dimen/dimension15dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/dimension30dp"
            android:layout_height="@dimen/dimension30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/backward_arrow"
            android:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Sponsor"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimension20dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSponsor"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="@dimen/dimension150dp"
            android:layout_height="@dimen/dimension90dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimension20dp"
            android:src="@drawable/aba_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension20dp"
            android:layout_marginLeft="@dimen/dimension5dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="The ABA"
                android:textAllCaps="false"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/dimension18dp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dimension15dp"
                android:layout_height="@dimen/dimension20dp"
                android:layout_marginTop="@dimen/dimension0dp"
                android:src="@drawable/r"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimension5dp"
                android:gravity="center"
                android:text="trademark is owned by American "
                android:textAllCaps="false"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/dimension18dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension5dp"
            android:gravity="center_vertical"
            android:text="Bar Association,under license.The American Bar Asscociation is one of the world's largest voluntary professional organizations.\n\nIts mission is to serve equally its members,the profession and the public by defending liberty and delivering justice as the national representative of"
            android:textAllCaps="false"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/dimension18dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimension5dp"
                android:gravity="center_vertical"
                android:text="the legal profession.The ABA"
                android:textAllCaps="false"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/dimension18dp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/dimension15dp"
                android:layout_height="@dimen/dimension20dp"
                android:src="@drawable/r"
                android:layout_gravity="top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimension5dp"
                android:gravity="center_vertical"
                android:text="Comission"
                android:textAllCaps="false"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/dimension18dp"
                android:textStyle="normal" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension5dp"
            android:gravity="center_vertical"
            android:text="on Law and Aging is the collaborative and interdisciplinary leader of the Association's work to strengthen and secure the legal rights, dignity, autonomy, quality of life, and quality of care of aging persons. "
            android:textAllCaps="false"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/dimension18dp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>

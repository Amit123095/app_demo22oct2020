<?xml version="1.0" encoding="utf-8"?>
<com.mindyourlovedone.healthcare.SwipeCode.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linswipe"
        android:layout_width="@dimen/dimension160dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lintrash"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF5534"
            android:gravity="center">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/imgDocType"
            android:layout_width="@dimen/dimension60dp"
            android:layout_height="@dimen/dimension60dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimension10dp"
            android:src="@drawable/insu_two" />

        <RelativeLayout
            android:id="@+id/rlProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgDocType"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/txtProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/dimension5dp"
                android:text="Provider Name :"
                android:textColor="@color/colorBlackDark"
                android:textSize="@dimen/dimension18dp" />

            <TextView
                android:id="@+id/txtProviderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtProvider"
                android:background="@color/colorWhite"
                android:padding="@dimen/dimension5dp"
                android:text="Provider Name"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/dimension18dp" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProvider"
                android:padding="@dimen/dimension5dp"
                android:text="Type :"
                android:textColor="@color/colorBlackDark"
                android:textSize="@dimen/dimension18dp" />

            <TextView
                android:id="@+id/txtTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProvider"
                android:layout_marginBottom="@dimen/dimension5dp"
                android:layout_toRightOf="@+id/txtType"
                android:padding="@dimen/dimension5dp"
                android:text="Type"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/dimension18dp" />

            <ImageView
                android:id="@+id/imgForword"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="@dimen/dimension60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimension5dp"
                android:focusableInTouchMode="false"
                android:padding="@dimen/dimension20dp"
                android:src="@drawable/right" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/dimension25dp"
                android:layout_height="@dimen/dimension25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimension10dp"
                android:src="@drawable/ic_edit_blue"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="@dimen/dimension200dp"
            android:layout_height="@dimen/dimension100dp"
            android:layout_below="@+id/rlProvider"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimension30dp"
            android:layout_marginTop="@dimen/dimension20dp"
            android:layout_marginRight="@dimen/dimension30dp"
            android:background="@color/colorWhite"
            android:scaleType="fitXY"
            android:src="@drawable/ins_card"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimension10dp"
            android:layout_marginBottom="@dimen/dimension10dp"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgFront"
                android:layout_width="@dimen/dimension25dp"
                android:layout_height="@dimen/dimension25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimension10dp"
                android:layout_weight="4"
                android:src="@drawable/blue_dot" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/dimension25dp"
                android:layout_height="@dimen/dimension25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension10dp"
                android:layout_weight="4"
                android:src="@drawable/white_dot" />
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDarkGray"
            android:layout_alignParentBottom="true"
    ></View>-->
    </RelativeLayout>
</com.mindyourlovedone.healthcare.SwipeCode.SwipeLayout>
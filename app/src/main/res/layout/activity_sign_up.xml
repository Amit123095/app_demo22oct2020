                android:paddingLeft="@dimen/dimension15dp"
                android:paddingRight="@dimen/dimension15dp">

                <ImageView
                    android:id="@+id/img63"
                    android:layout_width="@dimen/dimension20dp"
                    android:layout_height="@dimen/dimension20dp"
                    android:layout_marginRight="@dimen/dimension10dp"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:src="@drawable/bullet4" />

                <TextView
                    android:id="@+id/txtPolicy63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img63"
                    android:text=""
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtMylo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img63"
                    android:text="Mind Your Loved Ones"
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp" />

                <TextView
                    android:id="@+id/txtTM2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtMylo"
                    android:text="TM"
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension5dp" />

                <TextView
                    android:id="@+id/txtInc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtTM2"
                    android:text=",INC. "
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp" />

                <TextView
                    android:id="@+id/txtOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txtInc"
                    android:layout_toRightOf="@+id/txtInc"
                    android:text="@string/signupt4"
                    android:linksClickable="true"
                    android:textColorLink="@color/colorGrayPolicy"
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp" />

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtMylo"
                    android:layout_toRightOf="@+id/img63"
                    android:text="@string/signupt5"
                  android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel64"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel63"
                android:layout_marginBottom="@dimen/dimension80dp"
                android:layout_marginTop="@dimen/dimension15dp"
                android:paddingLeft="@dimen/dimension15dp"
                android:paddingRight="@dimen/dimension15dp">

                <ImageView
                    android:id="@+id/img64"
                    android:layout_width="@dimen/dimension20dp"
                    android:layout_height="@dimen/dimension20dp"
                    android:layout_marginRight="@dimen/dimension10dp"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:src="@drawable/bullet4" />

                <TextView
                    android:id="@+id/txtPolicy64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img64"
                    android:text="@string/signup6"
                    android:textColor="@color/colorGrayPolicy"
                    android:textSize="@dimen/dimension16dp" />

            </RelativeLayout>

            <TextView

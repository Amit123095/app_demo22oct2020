<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_red">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimension75dp"
            android:layout_height="@dimen/dimension75dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimension18dp"
            android:src="@drawable/delete_round"/>

        <TextView
            android:id="@+id/tv_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimension0dp"
            android:layout_marginTop="@dimen/dimension8dp"
            android:layout_marginRight="@dimen/dimension0dp"
            android:layout_marginBottom="@dimen/dimension5dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/dimension8dp"
            android:text="Delete Prescription"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_archive_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure do you want to Delete this Prescription"
            android:textStyle="normal"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/regular_lato"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/dimension2dp"
            android:paddingLeft="@dimen/dimension10dp"
            android:paddingRight="@dimen/dimension10dp"
            android:paddingBottom="@dimen/dimension10dp"
            android:layout_marginTop="@dimen/dimension5dp"
            android:layout_marginBottom="@dimen/dimension5dp"
            android:layout_marginLeft="@dimen/dimension0dp"
            android:layout_marginRight="@dimen/dimension0dp"
            android:maxLines="2"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension2dp"
            android:background="@android:color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_CancelDelete"
                android:layout_width="@dimen/dimension0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/regular_lato"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dimension10dp"
                android:text="Cancel"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="normal"
                android:layout_weight="0.49"/>

            <ImageView
                android:layout_weight="0.005"
                android:layout_width="@dimen/dimension0dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                />

            <TextView
                android:id="@+id/tv_Delete"
                android:layout_width="@dimen/dimension0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/regular_lato"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dimension10dp"
                android:text="Delete"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:layout_weight="0.49"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
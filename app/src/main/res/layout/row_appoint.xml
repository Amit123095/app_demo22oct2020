<?xml version="1.0" encoding="utf-8"?>
<com.mindyourlovedone.healthcare.SwipeCode.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linswipe"
        android:layout_width="@dimen/dimension160dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lintrash"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF5534"
            android:gravity="center">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gray_white_border"
            android:padding="@dimen/dimension5dp">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtType"
                    style="@style/EmergencyCategory"
                    android:layout_width="@dimen/dimension0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimension10dp"
                    android:layout_weight="50"
                    android:drawableLeft="@drawable/test"
                    android:drawablePadding="@dimen/dimension10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="ADM"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFrequency"
                    style="@style/EmergencyDesc"
                    android:layout_width="@dimen/dimension0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imgForword"
                    android:layout_toRightOf="@+id/txtType"
                    android:layout_weight="40"
                    android:drawableLeft="@drawable/frequency"
                    android:drawablePadding="@dimen/dimension10dp"
                    android:singleLine="true"
                    android:text="jksdffs "
                    android:textColor="@color/colorBlack" />


                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="@dimen/dimension25dp"
                    android:layout_height="@dimen/dimension25dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimension10dp"
                    android:layout_weight="5"
                    android:src="@drawable/ic_edit_blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDateTime"
                style="@style/EmergencyDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgForword"
                android:text="08/09/2017  14:00"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rltype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llTop">


                <TextView
                    android:id="@+id/txtDoctor"
                    style="@style/EmergencyDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/lab"
                    android:drawablePadding="@dimen/dimension10dp"
                    android:singleLine="true"
                    android:text="jksdffs "
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/EmergencyCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:drawablePadding="@dimen/dimension10dp"
                    android:drawableRight="@drawable/ic_droupdown_arrow"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimension10dp"
                    android:text="Set Completion Date "
                    android:textColor="@color/colorBlue" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltype"
                android:orientation="vertical"

                ></LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rltype"
                android:layout_marginBottom="@dimen/dimension5dp"
                android:layout_marginLeft="@dimen/dimension20dp"
                android:layout_marginRight="@dimen/dimension20dp"
                android:layout_marginTop="@dimen/dimension10dp"
                android:background="@color/colorDarkGray"
                android:visibility="gone"></View>


            <ImageView
                android:id="@+id/imgForword"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimension5dp"
                android:padding="@dimen/dimension5dp"
                android:src="@drawable/forword_arrow"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>
</com.mindyourlovedone.healthcare.SwipeCode.SwipeLayout>
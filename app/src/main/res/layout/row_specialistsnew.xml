<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnesGray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimension10dp"
        android:background="@drawable/border_row_white"
        android:elevation="@dimen/dimension3dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/dimension55dp"
            android:layout_height="@dimen/dimension55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension15dp"
            android:padding="@dimen/dimension5dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimension10dp"
            android:layout_marginBottom="@dimen/dimension10dp"
            android:layout_marginRight="@dimen/dimension10dp"
            android:layout_toLeftOf="@+id/imgForword"
            android:layout_toRightOf="@+id/imgLogo"
            android:gravity="center_vertical"
            android:padding="@dimen/dimension20dp"
            android:text="hjghjsd jkhjkns gfs"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/dimension20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgForword"
            android:layout_width="@dimen/dimension30dp"
            android:layout_height="@dimen/dimension30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimension15dp"
            android:background="@drawable/next_n"
            android:src="@drawable/next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension2dp"
        android:layout_alignParentBottom="true"
        android:background="#708EDF"
        android:visibility="gone"></View>
</RelativeLayout>
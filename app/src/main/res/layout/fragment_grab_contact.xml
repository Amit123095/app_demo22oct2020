<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimension10dp">

    <RelativeLayout
        android:id="@+id/rlSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueTrans"
        android:padding="@dimen/dimension10dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/gray_white_corner_border"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/dimension15dp"

            android:hint="Search"
            android:padding="@dimen/dimension10dp"
            android:textSize="@dimen/dimension22dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSearch"
        android:layout_marginBottom="@dimen/dimension15dp"
        android:layout_marginTop="@dimen/dimension15dp"
        android:divider="@null"></ListView>
</RelativeLayout>